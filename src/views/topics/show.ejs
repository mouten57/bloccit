<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1><%= topic.title %></h1>
      <a href="/topics/" class="btn btn-outline-info btn-sm">Back to Topics</a>

      <% if(currentUser) { %>
        <a href="/topics/<%= topic.id %>/posts/new" class="btn btn-outline-success btn-sm">New Post</a>
        <% if(currentUser.isAdmin()) { %>
          <a href="/topics/<%= topic.id %>/edit" class="btn btn-outline-warning btn-sm">Edit</a>
          <form style="display:initial" action="/topics/<%= topic.id %>/destroy" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
          </form>
        <% } %>
      <% } %>

      <p><%= topic.description %></p>
      <hr>
      <h1>Posts</h1>

      <ul class="list-group">
        <% topic.posts.forEach((post) => { %>
          <li class="list-group-item">
            <a href="/topics/<%= topic.id %>/posts/<%= post.id %>">
              <%= post.title %>
            </a>
          </li>
        <% }) %>
      </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>